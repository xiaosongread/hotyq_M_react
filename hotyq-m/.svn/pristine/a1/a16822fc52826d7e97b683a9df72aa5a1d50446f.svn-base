@charset 'utf-8';
@import 'global.scss';
:global{
    #more-list-content{
        .iScrollVerticalScrollbar{
            width: 5px !important;
            .iScrollIndicator{
                background-color: #bfbfbf !important;
                //display: none !important;
            }
        }
        
    }
}
.information{
    width: 100%;
    height: calc(100% - 50px);
    border-radius: 4px;
    //margin-top: 5px;
    background-color: #fff;
    .title{
        width: 100%;
        height: 45px;
        @include flexbox2(justify,space-between,center,center);
        padding: 0 10px;
        margin-bottom: 15px;
        position: relative;
        &:after{
            content: "";
            width: 100%;
            height: 1px;
            left: 0;
            bottom: 0;
            position: absolute;
            background-color: #e5e5e5;
            transform: scaleY(0.5);
        }
        &>span{
            color: #e73817;
            font-size: 18px;
        }
        &>a>span{
            color: #565656;
            font-size: 13px;
            i{
                font-size: 10px;
                color: #565656;
                line-height: 13px;
            }
        }
    }
    .info-item{
        padding: 0px 12px 15px 20px;
        text-align: justify;
        a{
            &:nth-of-type(1){
                position: relative;
                font-size: 16px;
                color: #333;
                line-height: 23px;
                &:before{
                    content: "";
                    width: 5px;
                    height: 5px;
                    left: -10px;
                    top: 8px;
                    position: absolute;
                    background-color: #565656;
                    border-radius: 50%;
                }
            }
            
        }
    }
}
.loading{
    border: none;
    margin-top: -30px;
    font-size: 14px;
    color: #565656;
    display: none;
    //opacity: 0;
}
